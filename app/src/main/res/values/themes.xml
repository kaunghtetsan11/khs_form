<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KhsForm" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/chivo</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">400</item>
        <item name="postSplashScreenTheme">@style/Theme.KhsForm</item>
    </style>

    <style name="App.Zero.Inset.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/_56dp</item>
        <item name="android:textSize">@dimen/_17sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="cornerRadius">@dimen/_6dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="App.Button.Gradient" parent="App.Zero.Inset.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/btn_bg_gradient</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Base.App.TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="App.TextStyle.Body1" parent="Base.App.TextStyle">
        <item name="android:textSize">@dimen/_38sp</item>
    </style>

    <style name="App.TextStyle.Body2" parent="Base.App.TextStyle">
        <item name="android:textSize">@dimen/_28sp</item>
    </style>

    <style name="App.TextStyle.Body3" parent="Base.App.TextStyle">
        <item name="android:textSize">@dimen/_22sp</item>
    </style>

    <style name="App.TextStyle.Body4" parent="Base.App.TextStyle">
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="App.TextStyle.Body5" parent="Base.App.TextStyle">
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconMode">clear_text</item>
        <item name="boxStrokeColor">@color/grey</item>
        <item name="android:textColorHint">@color/text_grey</item>
        <item name="hintTextColor">@color/text_grey</item>
    </style>

    <style name="App.TextInputLayout.DropDown" parent="App.TextInputLayout">
        <item name="endIconMode">dropdown_menu</item>
        <item name="endIconTint">@color/text_grey</item>
    </style>

    <style name="App.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="App.AutoComplete" parent="Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="App.TextAppearance" parent="">
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

</resources>